<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="Unit Test">
			<directory suffix="Tests.php">./tests/unit</directory>
		</testsuite>
	</testsuites>
</phpunit>
